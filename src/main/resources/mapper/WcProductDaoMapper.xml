<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wang.project.demo.dao.WcProductDao">

    <resultMap id="productMap" type="com.wang.project.demo.entity.WcProductEO">
        <id     column="ID"             property="id"           jdbcType="INTEGER"/>
        <result column="product_code"   property="productCode"  jdbcType="VARCHAR"/>
        <result column="product_name"   property="productName"  jdbcType="VARCHAR"/>
        <result column="product_num"    property="productNum"   jdbcType="INTEGER"/>
        <result column="insert_time"    property="insertTime"   jdbcType="TIMESTAMP"/>
        <result column="update_time"    property="updateTime"   jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="wc_product_Column_list">
        `id`,
        `product_code`,
        `product_name`,
        `product_num`,
        `insert_time`,
        `update_time`
    </sql>
    
    <insert id="insertWcProductEO" parameterType="com.wang.project.demo.entity.WcProductEO" >
        insert into wc_product
        (`product_code`,`product_name`,`product_num`,`insert_time`,`update_time`)
        values
        (#{productCode},#{productName},#{productNum},#{insertTime},#{updateTime})
    </insert>

    <update id="updateWcProductEOById" parameterType="com.wang.project.demo.entity.WcProductEO">
        update wc_product
        set
        `product_code` = #{productCode},`product_name` = #{productName},
        `product_num` = #{productNum},`insert_time` = #{insertTime},
        `update_time` = #{updateTime}
        where
        `id` = #{id}
    </update>

<!--    <select id="selectAllWcProductEOs" resultMap="wc_product_map_wcProduct">-->
<!--        select -->
<!--        <include refid="wc_product_Column_list"/>-->
<!--        from wc_product-->
<!--        where 1 = 1-->
<!--    </select>-->
    <select id="selectAllWcProductEOs" resultType="com.wang.project.demo.entity.WcProductEO">
        select
        <include refid="wc_product_Column_list"/>
        from wc_product
        where 1 = 1
    </select>

</mapper>